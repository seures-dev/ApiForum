          {
            "name": "branch_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID of the branch"
          },
          {
            "name": "page",
            "in": "path",
            "required": false,
            "type": "integer",
            "description": "page of branch, one page contain 30 posts"
