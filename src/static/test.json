          {
            "name": "branch_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID of the branch"
          },
          {
            "name": "offset",
            "in": "query",
            "type": "integer",
            "description": "Offset for paginated results"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": [
