  "paths": {
    "/threads": {
      "get": {
        "tags": [
          "Thread"
        ],
        "summary": "Get threads",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": [
          "Thread"
        ],
        "summary": "Create a new thread",
        "requestBody": {
          "description": "Request Post Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/post_thread"
              }
            }
          }
        },
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "Thread created",
            "schema": {
              "$ref": "#/components/schemas/threads"
            }
          },
          "400": {
            "description": "Failed. Wrong data."
          }
        }
      }
    },
